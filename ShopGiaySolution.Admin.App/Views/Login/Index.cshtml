
@using ShopGiaySolution.ViewModels.System.Users
@model LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập hệ thống</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
   <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="/Base.css" rel="stylesheet"/>
    <link href="/Dangnhap.css" rel="stylesheet"/>

   

    <title>Document</title>
  
</head>
<body>
    <div class="wrapper"data-aos="fade-left"  data-aos-anchor="#example-anchor"  data-aos-offset="500"  data-aos-duration="500">
    
            <form asp-action="Index" asp-controller="Login" method="post" class="form-login">
                <h1 class="form-heading">ĐĂNG NHẬP  </h1>
                  <div asp-validation-summary="All" class="text-danger"></div>
               <div class="form-group">
                     <i class="fa-regular fa-user"></i>
                    <input asp-for="UserName" type="text" class="form-input" placeholder="Tài khoản" >
               </div>
               <div class="form-group">
                <i class="fa-solid fa-key"></i>
                <input asp-for="Password" type="password" class="form-input" placeholder="Mật khẩu">
                <div id="eye">
                    <i class="fa-solid fa-eye"></i>
                </div>
                </div>
                <input type="submit" value="Đăng nhập" class="form-submit">
                <a href="">Quay về trang chủ</a>
            </form>
           
    
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.1.js" ></script>
<script src="/Dangnhap.js"></script>
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
    AOS.init();
</script>
</html>